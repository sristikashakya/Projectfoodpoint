<div class="card edits"> 
  <h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :Restaurants_name %><br />
    <%= f.text_field :name, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <% for role in Restaurant::ROLES %>
      <%= check_box_tag "restaurant[roles][#{role}]", role, @restaurant.roles.include?(role), {:name => "restaurant[roles][]"}%>
      <%= label_tag "restaurant_roles_#{role}", role.to_s.humanize %><br />
    <% end %>
    <%= hidden_field_tag "restaurant[roles][]", "" %>
  </div>

  <div class="field">
    <%= f.label 'Profile Picture' %><br>
    <%= f.file_field :photo %>
  </div>  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

