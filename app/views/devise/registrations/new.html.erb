<div class = "card edits">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign Up!</h2>
  <div class="field">
    <%= f.label :Restaurants_name %><br />
    <%= f.text_field :name, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    
      <%= f.select 'user_type', options_for_select([["owner",0],["customer",1]]) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'Profile Picture' %><br>
    <%= f.file_field :photo %>
  </div>  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<div class="field">
    <<%= link_to 'Mail', mail_path %>
  </div>
<%= render "devise/shared/links" %>
</div>









