<% if restaurant_signed_in? %>
			<span class="post_like">
					<% if current_restaurant.voted_up_on? post %>
					<%= link_to '<i class="fa fa-thumbs-up" aria-hidden="true"></i>'.html_safe, post_downvotes_path(post.id), method: :post, remote: true %> 
				<% else %>
					<%= link_to '<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>'.html_safe, post_upvotes_path(post.id), method: :post, remote: true %>
				<% end %>

				<%= pluralize post.get_likes.size, "like" %>
			</span>
		<% else %>
		<i class="fa fa-thumbs-o-up" aria-hidden="true"></i><%= pluralize post.get_likes.size, "like" %>
<% end %>